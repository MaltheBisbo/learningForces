import numpy as np
from ase import Atoms
from ase.visualize import view

def example_structure(x1,x2):
    '''
    x1, x2 is the two new coordiantes
    d0 is the 
    '''
    d0 = 1
    theta1 = -np.pi/3
    theta2 = -2/3*np.pi
    pos0 = np.array([0,0])
    pos1 = np.array([-d0 + x1*cos(theta1), x1*sin(theta1)])
    pos2 = np.array([d0 + x2*cos(theta2), x2*sin(theta2)])

    pos = np.array([pos1, pos0, pos2])

    a = Atoms(symbol='3He',
              positions=pos)
    return a

a = example_structure(1,1)
